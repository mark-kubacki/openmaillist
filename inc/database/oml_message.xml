<?xml version="1.0" encoding="UTF-8"?>
<schema version="0.2">
	<table name="users">
		<desc>Contains details on every message. Managed by oml_message.'</desc>

		<field name="MID" type="I">
			<desc>Primary key for addressing messages.</desc>
			<NOTNULL/>
		</field>

		<field name="message_id" type="C" size="128">
			<desc>This is to identify a certain message in case we want to add a reply to DB. Unique.</desc>
			<NOTNULL/>
		</field>

		<field name="DateSend" type="I">
			<NOTNULL/>
			<UNSIGNED/>
		</field>

		<field name="DateReceived" type="I">
			<NOTNULL/>
			<UNSIGNED/>
		</field>

		<field name="Sender" type="C" size="128">
			<NOTNULL/>
		</field>

		<field name="Subject" type="C">
			<NOTNULL/>
		</field>

		<field name="hasAttachements" type="L">
			<NOTNULL/>
		</field>

		<field name="MsgText" type="XL">
			<NOTNULL/>
		</field>

		<index name="MID">
			<col>MID</col>
			<PRIMARY/>
			<AUTOINCREMENT/>
		</index>

		<index name="message_id">
			<col>message_id</col>
			<UNIQUE/>
		</index>
	</table>
</schema>